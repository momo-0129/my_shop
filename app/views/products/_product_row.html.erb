<h1>products</h1>

  <div class="container" style="margin-top:50px, margin-button:50px;">
    <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="card-sl">
          <div class="card-image">
          <% if product.avatar.attached? %>
            <%= image_tag product.avatar.variant(:medium) %>
          <% else %>
            <img
            src="https://images.pexels.com/photos/1149831/pexels-photo-1149831.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" />
          <% end %>
          </div>
          <a class="card-action" href="#"><i class="fa fa-heart"></i></a>
          <div class="card-heading">
            <%= product.name %>
          </div>
          <div class="card-text">
            <%= product.description%>
          </div>
          <div class="card-text">
            <%= product.price %>
          </div>
          <% if current_user && !current_user.admin %>
            <%= link_to 'Purchase', checkout_path, class: "card-button" %> 
          <% elsif current_user.admin %>
            <%= link_to "Edit", edit_product_path(product), class: "edit-button" %>
          <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} , class: "card-button" %>
          <% else %>
          <%= link_to 'Singup & Purchase', new_user_registration_path, class: "card-button" %>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

